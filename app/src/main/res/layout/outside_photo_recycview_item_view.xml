<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_200">

    <ImageView
        android:id="@+id/outside_photo_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_120"
        android:layout_margin="@dimen/dimen_1"
        android:layout_marginTop="@dimen/dimen_2"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        android:layout_below="@+id/outside_photo_cb"
        android:id="@+id/outside_photo_title"
        android:text="车厢内部图片"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/outside_photo_delete"
        android:background="#00000000"
        android:layout_margin="@dimen/dimen_6"
        android:visibility="gone"
        android:layout_alignTop="@id/outside_photo_iv"
        android:layout_alignRight="@+id/outside_photo_iv"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/outside_photo_cb"
        android:layout_below="@+id/outside_photo_iv"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
