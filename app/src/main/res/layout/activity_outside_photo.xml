<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_outside_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yunwang.ui.activity.OutsidePhotoActivity">

    <include
        android:id="@+id/outside_photo_title_bar"
        layout="@layout/layout_outsidephoto_title_view" >

    </include>

    <TextView
        android:id="@+id/outside_photo_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/outside_photo_title_bar"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="03:08"
        android:textColor="@color/color_dialog_bg"
        android:textSize="@dimen/sp_18"/>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/outside_photo_time"
        android:scrollbars="none"/>

</RelativeLayout>
