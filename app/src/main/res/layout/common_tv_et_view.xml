<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_20"
    android:orientation="horizontal">

    <TextView
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_car_number"
        android:layout_marginLeft="@dimen/dimen_4"
        android:id="@+id/common_tv"
        android:textSize="@dimen/tv_big_size" />

    <EditText
        android:layout_weight="1"
        android:id="@+id/common_et"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_input_text_bg"
        android:gravity="top"
        android:hint="@string/tv_please_complete_car_number"
        android:minHeight="@dimen/dimen_60"
        android:paddingBottom="@dimen/dimen_10"
        android:paddingTop="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_4"
        android:textColorHint="@color/color_line_view" />

</LinearLayout>


